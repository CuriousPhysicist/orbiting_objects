<div class="flex flex-col max-w-3xl mx-auto">
  <h1 class="text-3xl font-bold text-center">
    Satellites index page
  </h1>

  <div data-controller="satellite" class="flex flex-col">
    <div class="flex flex-row items-center mx-auto">
      <label for="satellite-number" class="">Max number of Satellites :</label>
      <input id="satellite-number"
             type="number"
             class="border-none bg-indigo-950 max-w-min"
             data-satellite-target="satelliteNumber"
             min=1 placeholder=20>
    </div>

    <button data-action="click->satellite#getTargetSatellites"
            class="p-3 mx-auto my-2 border rounded-lg">
      Get Satellites
    </button>
  </div>

  <p class="mx-auto my-2">
  Here are <%= @satellites.count %> satallites currently orbiting the earth.
  </p>

  <table class="mx-auto mb-4 border center w-96">
    <tr class="border">
      <th class="text-center border">
        Satallite Name
      </th>
      <th class="text-center border">
        Satallite ID
      </th>
    </tr>
    <% @satellites.all.each do |satellite| %>
      <tr class="border">
        <td class="text-center border">
          <%= satellite.name %>
        </td>
        <td class="text-center border">
          <%= link_to satellite.satellite_id,
                      satellite,
                      class: "hover:ring hover:ring-blue-500/75 rounded-lg p-1"
          %>
        </td>
      </tr>
    <% end %>
  </table>

  <label for="lat-and-long-position">
    <input class="mr-3"
           type="text"
           placeholder="123.000, 12345.945"
           id="lat-and-long-position">
    Enter your location (Latitude, Longitude)
  </label>
</div>

